<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MongoDB Movies</title>
    <style>
        .movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }
        .movie-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            background: white;
        }
        .movie-poster {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 4px;
        }
        .movie-title {
            font-size: 1.5em;
            font-weight: bold;
            margin: 10px 0;
        }
        .movie-year {
            color: #666;
        }
    </style>
</head>
<body>
    <h1>MongoDB Movies</h1>
    
    <% if (error) { %>
        <div style="color: red; padding: 10px; background: #ffe6e6;">
            <%= error %>
        </div>
    <% } %>
    
    <div class="movie-grid">
        <% movies.forEach(movie => { %>
            <div class="movie-card">
                
                <% if (movie.poster) { %>
                    <img src="<%= movie.poster %>" 
                         alt="<%= movie.title %>" 
                         class="movie-poster"
                         onerror="this.style.display='null'">
                <% } else { %>
                    <div class="movie-poster" style="background: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                        No Image
                    </div>
                <% } %>
                
                
                <div class="movie-title">
                    <%= movie.title %>
                </div>

                <div class="movie-genres">
                    Genres: <%= movie.genres.join(', ') %>
                </div>

                <div class="movie-year">
                     Released: <%= movie.year %>
                </div>
            </div>
        <% }); %>
    </div>

    <!-- Search Form -->
<form method="GET" action="/" style="background: white; padding: 2rem; border-radius: 8px; margin-bottom: 2rem;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 1rem;">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= query.title || '' %>" style="width: 100%; padding: 0.5rem;">
        </div>
              
        <div>
            <label for="genre">Genre:</label>
            <select id="genre" name="genre" style="width: 100%; padding: 0.5rem;">
                <option value="">All Genres</option>
                <% genres.forEach(genre => { %>
                    <option value="<%= genre %>" <%= query.genre === genre ? 'selected' : '' %>>
                        <%= genre %>
                    </option>
                <% }); %>
            </select>
        </div>
        
        <div>
            <label for="type">Type:</label>
            <select id="type" name="type" style="width: 100%; padding: 0.5rem;">
                <option value="">All Types</option>
                <option value="movie" <%= query.type === 'movie' ? 'selected' : '' %>>Movie</option>
                <option value="series" <%= query.type === 'series' ? 'selected' : '' %>>Series</option>
            </select>
        </div>
        
        <div>
            <label for="yearFrom">Year From:</label>
            <input type="number" id="yearFrom" name="yearFrom" value="<%= query.yearFrom || '' %>" style="width: 100%; padding: 0.5rem;">
        </div>
        
        <div>
            <label for="yearTo">Year To:</label>
            <input type="number" id="yearTo" name="yearTo" value="<%= query.yearTo || '' %>" style="width: 100%; padding: 0.5rem;">
        </div>
        
        
    </div>
    
    <div style="display: flex; gap: 1rem;">
        <button type="submit" style="background: #3498db; color: white; border: none; padding: 0.75rem 1.5rem; border-radius: 4px; cursor: pointer;">
            üîç Search
        </button>
        <a href="/" style="background: #95a5a6; color: white; padding: 0.75rem 1.5rem; border-radius: 4px; text-decoration: none;">
            üîÑ Clear
        </a>
    </div>
</form>
    
</body>
</html>